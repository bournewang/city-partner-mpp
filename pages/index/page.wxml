<!--index.wxml-->

<view class="block">
  <t-tabs value="{{tab}}" bind:change="onTabsChange" t-class="custom-tabs">
    <t-tab-panel label="城市合伙人" value="0">
      <scroll-view class="scrollarea" scroll-y type="list">
        <view class="block">
          <image class="partner-img" src="/static/images/city-partner.jpg" />
          <t-grid column="{{challengeData.length}}">
            <t-grid-item wx:for="{{challengeData}}" wx:key="label" wx:for-item="item" text="{{item.value}}" description="{{item.label}}" />
          </t-grid>
          <t-grid column="{{3}}">
            <t-grid-item wx:for="{{$state.challengeLevels}}" wx:key="level" wx:for-item="item" description="{{item.label}}" icon="{{item.icon}}" data-title="{{item.rules}}" data-text="{{item.bonus_text}}" bindclick="popup" />
          </t-grid>
          <view wx:if="{{!$state.challenge}}">
            <t-radio-group bind:change="onChange" value="{{current}}" options="{{options}}" borderless t-class="box" />
            <t-button size="large" theme="primary" block bind:tap="goApply" data-type="challenge">征召授职挑战</t-button>
          </view>
          <view wx:else class="text-center">
            <t-button size="large" theme="primary" block bind:tap="goMyChallenge">我的挑战</t-button>
          </view>
          <view>
            <t-popup visible="{{popup}}" bind:visible-change="onVisibleChange" placement="bottom">
              <view class="block popup">
                <rich-text nodes="{{popup_title}}<br/>{{popup_text}}">
                </rich-text>
              </view>
            </t-popup>
          </view>
        </view>

      </scroll-view>
    </t-tab-panel>
    <t-tab-panel label="车管家互助社" value="1">
      <scroll-view class="scrollarea" scroll-y type="list">
        <view class="head">
          <image class="funding-img" style="position:relative;" src="/static/images/funding.jpg" />
        </view>
        <t-grid column="4">
          <t-grid-item 
            wx:for="{{stats}}" 
            wx:for-item="item" 
            wx:key="index"
            text="{{item.value}}" 
            description="{{item.label}}" />
        </t-grid>
        <t-button wx:if="{{tab==1}}" bind:tap="showRules" style="background-color: rgba(0,0,0,.5); color:white; position: fixed; bottom: 20em;right: 1em;" size="small"> 查看详情>
        </t-button>
        
        <t-button wx:if="{{!$state.crowdFunding}}" size="large" theme="primary" block bind:tap="goApply" data-type="funding">请完成身份认证</t-button>
        <view wx:else class="text-center">
            <t-button size="large" theme="primary" block bind:tap="goMyFunding">我的互助</t-button>
          </view>
      </scroll-view>
    </t-tab-panel>
  </t-tabs>
</view>

<tab-bar value="/pages/index/page"></tab-bar>