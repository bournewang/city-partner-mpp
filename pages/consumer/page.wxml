<scroll-view scroll-y type="list">
  <t-tabs value="{{tab}}" bind:change="onTabsChange" t-class="custom-tabs">
    <t-tab-panel label="个人信息" value="0">
      <smart-form value="{{consumer}}" fieldOptions="{{consumerFields}}" displayMode="1"/>
    </t-tab-panel>
    <t-tab-panel label="合伙资产" value="1">
      <smart-form value="{{partnerAsset}}" fieldOptions="{{partnerAssetFields}}" displayMode="1"/>
    </t-tab-panel>
    <t-tab-panel label="车辆信息" value="2">
      <smart-form value="{{car}}" fieldOptions="{{carFields}}" displayMode="1"/>
    </t-tab-panel>
  </t-tabs>
</scroll-view>
